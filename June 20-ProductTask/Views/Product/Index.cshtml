@model ProductTask.Models.CascadeProducts
@{
    ViewBag.Title = "Index";
}
<html>
<body>
    <h2>Index</h2>
    @using (Html.BeginForm("Index", "Product", FormMethod.Post))
    {
        @Html.DropDownListFor(m => m.CategoryId, Model.Category, "Please Select", new { onchange = "document.forms[0].submit();" })

        <br />
        <br />
        <br />
        @Html.DropDownListFor(m => m.SubCategoryId, Model.SubCategory, "Please Select", new { onchange = "document.forms[0].submit();" })
        <br />
        <br />
        <br />
        @Html.DropDownListFor(m => m.ProductId, Model.Product, "Please Select" )
        <br />
        <br />
        <br />
        <input type="submit" value="submit"/>


    }
</body>
</html>