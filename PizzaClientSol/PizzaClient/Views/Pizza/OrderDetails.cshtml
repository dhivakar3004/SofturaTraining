                    num = parseInt(value);
                    FinalPrice = num 
                    $("#lbamount").val(FinalPrice);
                }
                if (a == "Mushrooms") {
                    value = localStorage["lastPrice"];
                    num = parseInt(value);
                    FinalPrice = num + (Quan * 25);
                    $("#lbamount").val(FinalPrice);
                }
                if (a == "Extra Onions") {
                    value = localStorage["lastPrice"];
                    num = parseInt(value);
                    FinalPrice = num + (Quan * 30);
                    $("#lbamount").val(FinalPrice);
                }
                if (a == "Bacon") {
                    value = localStorage["lastPrice"];
                    num = parseInt(value);
                    FinalPrice = num + (Quan * 25);
                    $("#lbamount").val(FinalPrice);
                }
               

            }
        </script>

    
